<% var deliveryLocations = this.deliveryLocations %>
<% var user = this.customer %>
<% var ddl = user.defaultDeliveryLocation.id %>
<% var firstNameId = "reg_firstName" %>
<% var lastNameId = "reg_lastName" %>
<% var emailId = "reg_email" %>
<% var ddlId = "reg_ddl" %>
<% var subscribeMenuWeeklyId = "reg_subscribeMenuWeekly" %>
<% var subscribeNewsId = "reg_subscribeNews" %>

<form id="customerForm" class="input-form" action="javascript:">

	<div class="input-form-row">
		<label for="<%= firstNameId %>"><%= msg( "customer.registration.firstName" ) %>:</label>
		<input type="text" name="firstName" id="<%= firstNameId %>" value="<%= user.firstName %>"/>
	</div>

	<div class="input-form-row">
		<label for="<%= lastNameId %>"><%= msg( "customer.registration.lastName" ) %>:</label>
		<input type="text" name="lastName" id="<%= lastNameId %>" value="<%= user.lastName %>"/>
	</div>

	<div class="input-form-row">
		<label for="<%= emailId %>"><%= msg( "customer.registration.email" ) %>:</label>
		<input type="text" name="email" id="<%= emailId %>" value="<%= user.email %>"/>
	</div>

	<div class="input-form-row">
		<label for="<%= ddlId %>"><%= msg( "customer.registration.ddl" ) %>:</label>
	
		<select name="defaultDeliveryLocationId" id="<%= ddlId %>">
		<% for ( var i = 0; i < deliveryLocations.length; i++ ) { %>
			<option value="<%= deliveryLocations[ i ].id %>" <%= deliveryLocations[ i ].id == ddl ? "selected='selected'" : "" %>>
				<%= deliveryLocations[ i ].name %>
			</option>
		<% } %>
		</select>
	</div>
	<div class="input-form-row">
		<label for="<%= subscribeMenuWeeklyId %>"><%= msg( "customer.registration.subscribeMenuWeekly" ) %>:</label>
		<input type="checkbox" name="subscribe" id="<%= subscribeMenuWeeklyId %>" <%= user.isSubscribedMenuWeekly ? "checked='checked'" : "" %>/>
	</div>
	<div class="input-form-row">
		<label for="<%= subscribeNewsId %>" 
			title="<%= msg( "customer.registration.subscribeNews.title" ) %>"><%= msg( "customer.registration.subscribeNews" ) %>:</label>
		<input type="checkbox" name="subscribe" id="<%= subscribeNewsId %>" <%= user.isSubscribedNews ? "checked='checked'" : "" %>/>
	</div>

	<div class="input-form-buttons-row">
		<input type="button" id="submitButton" value="<%= msg( "customer.registration.done" ) %>"/>
	</div>
</form>
