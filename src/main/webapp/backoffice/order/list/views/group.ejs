<% var article = this.article %>
<% var orders = this.orders %>

<h3 id="<%= article.name_en %>"><span class="switch"><%= closed ? '+' : '-' %></span> <em><%= article.name_en %></em> <span class="info"><%= orders.length %> order(s)</span></h3>
<table class="order-group">
	<tr>
		<th class="id-col">#</th>
		<th class="customer-col">Customer</th>
	</tr>
	<% for ( var i = 0; i < orders.length; i++ ) { %>
	<tr <%= orders[ i ] %>>
		<%== $.View( '//backoffice/order/list/views/item.ejs', orders[ i ] ) %>
	</tr>
	<% } %>
	<tr>
		<td>&nbsp;</td>
		<td><input type="button" value="Close orders"/></td>
	</tr>
</table>
