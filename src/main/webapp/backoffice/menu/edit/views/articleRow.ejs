<% 	var article = this;
	var isSoldOut = article.isSoldOut; 
	var isActive = article.isActiveDelivery || article.isActiveRestaurantWeekly || article.isActiveRestaurantDaily;
	var isNew = article.isNew;
	var isDailyLimit = article.dailyLimit != null;
%>

	<tr class="articleRow <%= isActive ? "active" : "inactive" %>" articleId="<%= article.id %>">

		<td class="codeCell">
			<%= article.code %>
		</td>
		<td class="articleCell">
			<div class="meal-header">
				<a href="javascript:" class="action-link" action="edit" style="color : inherit;"><%= article.name_cz %> / <%= article.name_en %></a>
				<% if( isNew ) { %> 
					<span class="meal-new-label">New</span> 
				<% } %>
				<% if(isSoldOut) { %> 
					<span class="meal-sold-out-label">Sold out</span> 
				<% } %>
			</div>
			<div class="meal-description">
				<%= article.description_cz %> / <%= article.description_en %>
			</div>
		</td>
		<td class="priceCell">
			<%= article.priceDelivery %>,-
		</td>
		<td class="priceCell">
			<%= article.priceRestaurant %>,-
		</td>
		<td class="limitCell">
			<input class="daily-limit-input" type="text" initialValue="<%= article.dailyLimit %>" value="<%= article.dailyLimit %>" onclick="this.select()">
		</td>
		<td class="actionsCell">
			New<br>
			<input id="flagCheckbox" flagName="isNew" type="checkbox" <%= isNew ? "checked" : "" %>>
		</td>
		<td class="actionsCell <%= isActiveDelivery ? "active" : "inactive" %>">
			Del<br>
			<input id="flagCheckbox" flagName="isActiveDelivery" type="checkbox" <%= isActiveDelivery ? "checked" : "" %>>
		</td>
		<td class="actionsCell <%= isActiveRestaurantWeekly ? "active" : "inactive" %>">
			RestW<br>
			<input id="flagCheckbox" flagName="isActiveRestaurantWeekly" type="checkbox" <%= isActiveRestaurantWeekly ? "checked" : "" %>>
		</td>
		<td class="actionsCell <%= isActiveRestaurantDaily ? "active" : "inactive" %>">
			RestD<br>
			<input id="flagCheckbox" flagName="isActiveRestaurantDaily" type="checkbox" <%= isActiveRestaurantDaily ? "checked" : "" %>>
		</td>
	</tr>
		