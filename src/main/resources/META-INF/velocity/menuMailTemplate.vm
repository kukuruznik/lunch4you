<html>
	<head>
		<style>
		#include( "META-INF/velocity/menuMailTemplate.css" )
		</style>
	</head>
	
	<body>
	
	<div class="headerText">
		#set( $headerTemplateName = "META-INF/velocity/menuMailTemplate_header_" + $customer.defaultDeliveryLocation.abbreviation + ".html")
		#parse( $headerTemplateName )
		
		<p>
		<span class="importantNote"> Important Note : </span> All links in this email are personalized to authenticate you automatically. Please do not forward this email. If you would like to recommend Lunch4you to a friend, please use the link below the menu.
	</div>

	<hr style="border : 0px; border-top : 1px lightgray solid;">


#set( $articleCounter = 0 )

	<table border="0" class="menuTable">
		<tr class="headerRow">
			<td class="codeCell"></td>
			<td class="articleCell"></td>
			<td class="priceCell"></td>	
		</tr>
#foreach( ${categoryWithArticles} in ${categoriesWithArticles} )
		#set( $category = $categoryWithArticles.entity )
		<tr>
			<td colspan="3" class="categoryCell">
				${category.name_cz} / ${category.name_en}
			</td>
		</tr>
		#foreach( ${article} in ${categoryWithArticles.items} )
		<tr>
			<td class="codeCell">
			${article.code}
			</td>
			<td class="articleCell">
			<a href="${shopURL}#view=order&meal=${article.Id}&token=${customer.token}">
			${article.name_cz}
			#if( ${article.name_en} != "" )
				/ ${article.name_en}
			#end 
			</a>
			- 
			${article.description_cz}
			#if( ${article.description_en} != "" )
				/ ${article.description_en}
			#end 
			</td>
			<td class="priceCell">
				<span class="nowrap">
				${article.price},- CZK
				#if( ${category.id} == 1 or ${category.id} == 2)
					<span class="special-price" title="Please refer to special prices note at the bottom of this email">***</span>
				#end
				</span>
				
			</td>
		</tr>
	#end

#end
		<tr>
			<td class="codeCell">
				<span class="special-price">***</span> 
			</td>
			<td class="menuNotes" colspan="2">
				<i>Price of this item is 10,- CZK when ordered together with a main meal.</i>
			</td>
		</tr>
	</table>
	<hr style="border : 0px; border-top : 1px lightgray solid;">	
	
	<div class="footerText">
		<p>
		<!-- 
		<a href="${shopURL}#view=profile&token=${customer.token}"
			title="Click here to edit your profile, subscribe/unsubscribe, etc..."
		>My profile</a>
		 | 
		 -->
		<a href="${shopURL}#view=menu&token=${customer.token}">Menu online</a>
		 | 
		<a href="${shopURL}#view=referral&token=${customer.token}">Recommend to a friend</a>
		</p>
	</div>
	
	
	<div class="footerText">
		#set( $footerTemplateName = "META-INF/velocity/menuMailTemplate_footer_" + $customer.defaultDeliveryLocation.abbreviation + ".html")
		#parse( $footerTemplateName )

		<h4>Lunch4you Contacts</h4>
		<p>
		In case of any questions or issues please contact Lunch4you at ${contactDetails}
		</p>

		<p>
		Regards,<br>
		- Lunch4you team
		</p>

	</div>


	</body>
</html>