<html>
	<head>
		<style>
		#include( "META-INF/velocity/menuMailTemplate.css" )
		</style>
	</head>
	
	<body>
	
	<div class="headerText">
		#set( $headerName = "META-INF/velocity/menuMailTemplate_header_" + $customer.defaultDeliveryLocation.abbreviation + ".html")
		#parse( $headerName )
	</div>

	<hr style="border : 0px; border-top : 1px lightgray solid;">


#set( $articleCounter = 0 )

	<table border="0" class="menuTable">
		<tr class="headerRow">
			<td class="articleCell"></td>
			<td class="priceCell"></td>	
		</tr>
#foreach( ${categoryWithArticles} in ${categoriesWithArticles} )
		#set( $category = $categoryWithArticles.entity )
		<tr>
			<td colspan="2" class="categoryCell">
				${category.name_cz} / ${category.name_en}
			</td>
		</tr>
		#foreach( ${article} in ${categoryWithArticles.items} )
		#set( $articleCounter = $articleCounter + 1 )
		<tr>
			<td class="articleCell">
			${articleCounter}. <a href="${shopURL}#view=order&meal=${article.Id}&token=${customer.token}">
			${article.name_cz}
			#if( ${article.name_en} != "" )
				/ ${article.name_en}
			#end 
			</a>
			- 
			${article.description_cz}
			#if( ${article.description_en} != "" )
				/ ${article.description_en}
			#end 
			</td>
			<td class="priceCell">
				<span class="nowrap">
				${article.price},- CZK
				#if( ${category.id} == 1 or ${category.id} == 2)
					<span class="special-price" title="Please refer to special prices note at the bottom of this email">***</span>
				#end
				</span>
				
				
			</td>
		</tr>
	#end

#end
	</table>
	<hr style="border : 0px; border-top : 1px lightgray solid;">	
	<span class="special-price">***</span> <i>Cena této položky je 10,- CZK, jeli objednána s hlavním jídlem. / Price of this item is 10,- CZK when ordered together with a main meal</i>
	<br>&nbsp;
	<div class="footerText">
		#parse( "META-INF/velocity/menuMailTemplate_footer.html" )
	</div>

	</body>
</html>